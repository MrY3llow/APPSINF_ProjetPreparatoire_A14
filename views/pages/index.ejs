<script>
  // Fonction pour afficher la date actuelle
  function updateDate() {
    const now = new Date();
    const options = { 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    };
    const dateString = now.toLocaleDateString('fr-FR', options);
    document.getElementById('current-date').textContent = dateString;
  }
  
  // Mettre à jour la date au chargement de la page
  updateDate();
</script>